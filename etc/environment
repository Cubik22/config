# info on keyboard setup
# man xkeyboard-config

# keyboard and layout
XKB_DEFAULT_LAYOUT="us"
# XKB_DEFAULT_LAYOUT="it"

# special keys with altgr
XKB_DEFAULT_VARIANT="altgr-intl"

# Dell Precision or XPS
XKB_DEFAULT_MODEL="precision_m"

# map caps lock to escape and shift + caps lock to caps lock
# remap "< >" key which is extra in us iso layout

# remap "< >" key to enter level 2 (shift)
XKB_DEFAULT_OPTIONS="caps:escape_shifted_capslock,lv2:lsgt_switch"
# remap "< >" key to compose key
# XKB_DEFAULT_OPTIONS="caps:escape_shifted_capslock,compose:102"

